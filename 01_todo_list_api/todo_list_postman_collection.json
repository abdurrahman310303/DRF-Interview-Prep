                {
                    "name": "Order by Creation Date",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{api_url}}/todos/?ordering=-created_at",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "todos",
                                ""
                            ],
                            "query": [
                                {
                                    "key": "ordering",
                                    "value": "-created_at"
                                }
                            ]
                        }
                    }
                }
            ]
