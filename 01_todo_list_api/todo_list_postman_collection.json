                    "name": "Toggle Todo Completion",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"completed\": true\n}"
                        },
                        "url": {
                            "raw": "{{api_url}}/todos/1/toggle/",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "todos",
                                "1",
