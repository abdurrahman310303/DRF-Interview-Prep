    "event": [
        {
            "listen": "test",
            "script": {
                "exec": [
                    "// Auto-save tokens from login responses",
                    "if (pm.response.code === 200) {",
                    "    const responseJson = pm.response.json();",
                    "    if (responseJson.access) {",
                    "        pm.environment.set('access_token', responseJson.access);",
                    "    }",
                    "    if (responseJson.refresh) {",
                    "        pm.environment.set('refresh_token', responseJson.refresh);",
                    "    }",
                    "    if (responseJson.user && responseJson.user.role === 'admin') {",
                    "        pm.environment.set('admin_access_token', responseJson.access);",
                    "    }",
                    "}"
                ],
                "type": "text/javascript"
            }
        }
