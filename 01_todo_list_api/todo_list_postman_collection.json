                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"testpass123\"\n}"
                        },
                        "url": {
                            "raw": "{{api_url}}/login/",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "login",
                                ""
                            ]
                        }
                    }
                },
                {
                    "name": "User Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{api_url}}/users/logout/",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "users",
                                "logout",
                                ""
                            ]
                        }
                    }
                },
                {
                    "name": "Get User Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{api_url}}/users/profile/",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "users",
                                "profile",
                                ""
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "2. Todo CRUD Operations",
            "item": [
                {
                    "name": "Create Todo",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Learn Django REST Framework\",\n    \"description\": \"Complete the todo list API project\",\n    \"due_date\": \"2024-01-20\"\n}"
                        },
                        "url": {
                            "raw": "{{api_url}}/todos/",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "todos",
                                ""
                            ]
                        }
                    }
                },
                {
                    "name": "List All Todos",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{api_url}}/todos/",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "todos",
                                ""
                            ]
