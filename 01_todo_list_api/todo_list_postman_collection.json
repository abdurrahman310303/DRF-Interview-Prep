                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Learn Django REST Framework - UPDATED\",\n    \"description\": \"Complete the todo list API project with improvements\",\n    \"due_date\": \"2024-01-25\"\n}"
